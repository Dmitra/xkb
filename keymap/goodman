xkb_keymap {
    xkb_keycodes {
        include "evdev+aliases(qwerty)"
    };
    xkb_types {
        include "complete"
    };
    xkb_compat {
        include "complete"
        virtual_modifiers LAlt;
        group 2 = Hyper;
        interpret AE+Exactly(None) {
            action = RedirectKey(keycode=<LEFT>, clearmodifiers=all);
        };

        interpret ISO_Group_Latch {
          action = LatchGroup(group=2);
          useModMapMods= level1;
        };
    };
    xkb_symbols {
        include "pc+us(workman)"
        include "inet(evdev)"
        include "capslock(swapescape)"
        include "compose(rctrl)"
        name[Group2]= "Goodman";

        key <LALT> {
            type[Group1] = "ONE_LEVEL",
            symbols[Group1] = [ ISO_Group_Latch ],
            virtualMods= Hyper
        };
        modifier_map Mod1 { Alt_L, ISO_Group_Latch };

        key <AC07> {
            type[Group2] = "ONE_LEVEL",
            symbols[Group2] = [ AE ]
        };
    };
    xkb_geometry {
        include "pc(pc105)"
    };
};